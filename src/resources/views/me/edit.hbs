<div class="alert alert-primary text-center" role="alert">
  <h3>Sửa khóa học</h3>
</div>
<form method="post" action="./update-{{course._id}}?_method=PUT">
  <div class="form-group">
    <label for="inputName">Name</label>
    <input type="text" class="form-control" value="{{course.name}}" id="inputName" name="name">
  </div>
    <div class="form-group">
        <label for="descriptionFormControlTextarea1">Description</label>
        <textarea class="form-control" id="descriptionFormControlTextarea1" name="description" rows="3">{{course.description}}</textarea>
    </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputLevel">Level</label>
      <input type="text" class="form-control" value="{{course.level}}" id="inputLevel" name="level">
    </div>
    <div class="form-group col-md-6">
      <label for="inputVideoId">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="inputVideoId" name="videoId">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Lưu lại</button>
</form>
<div class='mt-4'>
    <div class='row'>
        {{#each course}}
            <div class='col-sm-6 col-lg-4'>
                <div class='card mt-4' style='width: 18rem;'>
                    <a href='/course/{{this.slug}}'>
                        <img
                            class='card-img-top'
                            src='{{this.thumbnail}}'
                            alt='{{this.name}}'
                        />
                    </a>
                    <div class='card-body'>
                        <a href='/course/{{this.slug}}'>
                            <h5 class='card-title'>{{this.name}}</h5>
                        </a>
                        <p class='card-text'>{{this.description}}</p>
                        <a
                            href='/course/{{this.slug}}'
                            class='btn btn-primary'
                        >H·ªçc ngay</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>